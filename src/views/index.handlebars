<main class="container">
    <h1>Nuevo Producto</h1>
      <form action="/" method="post">
        <input type="text" name="title" placeholder="Titulo" required>
        <input type="text" name="description" placeholder="Descripción" required>
        <input type="number" name="code" placeholder="Codigo" required>
        <input type="text" name="price" placeholder="Precio" required>
        <input type="text" name="status" placeholder="Estatus" value="true" readonly>
        <input type="number" name="stock" placeholder="Existencias" required>
        <input type="text" name="category" placeholder="Categoria" required>
        <input type="text" name="thumbnails[]" placeholder="Imagen">
        <input type="submit" value="Enviar">
      </form>
  <h1>Lista de Productos</h1>
    <div>
      {{#each products}}
        <div>
          <p><strong>Id</strong>: {{this.id}}</p>
          <p><strong>Nombre</strong>: {{this.title}}</p>
          <p><strong>Descripción</strong>: {{this.description}}</p>
          <p><strong>Precio</strong>: {{this.price}}</p>
          <p><strong>Codigo</strong>: {{this.code}}</p>
          <p><strong>Existencias</strong>: {{this.stock}}</p>
        </div>
        <hr>
      {{/each}}
    </div>
</main>